<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Thêm phiếu mượn"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        />
    <Spinner
        android:id="@+id/sp_tenTv_phieuMuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Spinner
        android:id="@+id/sp_tenSach_phieuMuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="9dp"
        android:id="@+id/tv_ngayMuon_phieuMuon"
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_height="wrap_content"
        android:text="Ngay thue"
        android:textSize="18dp" />

    <TextView
        android:layout_marginStart="9dp"
        android:id="@+id/tv_tienThue_phieuMuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:text="Tien thue"
        android:inputType="number"
        android:textSize="18dp" />

    <CheckBox
        android:layout_marginStart="4dp"
        android:id="@+id/chk_trangThaiPhieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã trả sách" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save_themPhieu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="30dp"

            android:backgroundTint="#1E88E5"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:text="Lưu"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_themPhieu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="#FF0600"
            android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
            android:text="Huỷ"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>