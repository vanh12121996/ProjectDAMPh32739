<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="fpoly.anhnvph32739.duanmau.fragment.FragmentChangePassWord">

    <TextView
        android:id="@+id/tv_titleChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/dacing_scrip"
        android:gravity="center"
        android:text="Đổi mật khẩu"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_passOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edittext"
        android:padding="17dp"
        android:layout_below="@+id/tv_titleChangePass"
        android:layout_marginBottom="10dp"
        android:hint="Mật khẩu cũ" />

    <EditText
        android:id="@+id/edt_newPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_passOld"
        android:background="@drawable/border_edittext"
        android:padding="17dp"
        android:layout_marginBottom="10dp"
        android:hint="Mật khẩu mới" />

    <EditText
        android:id="@+id/edt_confirmNewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_newPass"
        android:background="@drawable/border_edittext"
        android:padding="17dp"
        android:layout_marginBottom="10dp"
        android:hint="Xác nhận mật khẩu mới" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_confirmNewPass"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirmChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_confirmNewPass"
            android:background="@drawable/background_button_gradient"
            android:text="Xác nhận"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_changePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_confirmNewPass"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/btn_confirmChangePass"
            android:background="@drawable/border_button_cancel"
            android:text="Huỷ"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>