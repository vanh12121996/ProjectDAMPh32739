<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border_item_recycler_phieumuon"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_maPhieuMuon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:text="Mã phiếu mượn: 1" />

    <TextView
        android:id="@+id/tv_tenThanhVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tv_maPhieuMuon"
        android:layout_alignParentStart="true"
        android:text="Ten thanh vien" />

    <TextView
        android:id="@+id/tv_tenSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tenThanhVien"
        android:layout_alignParentStart="true"
        android:text="Ten sach" />

    <TextView
        android:id="@+id/tv_tienThue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tenSach"
        android:layout_alignParentStart="true"
        android:text="Tien thue" />

    <TextView
        android:id="@+id/tv_ngayMuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tienThue"
        android:layout_alignParentStart="true"
        android:text="Ngay muon"

        />

    <TextView
        android:id="@+id/tv_trangThaiTraSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_ngayMuon"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tv_ngayMuon"
        android:gravity="end"
        android:text="Đã trả sách" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/tv_trangThaiTraSach"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/rubbish"
        />
</RelativeLayout>